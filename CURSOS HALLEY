riencia en áreas de calidad, regulatoria o cumplimiento normativo.","Conocimiento de los estándares relevantes para su industria."],"recommended":["Ingenieros de calidad, asuntos regulatorios y gerentes de producto."],"not_for":["Personas sin experiencia o interés en el cumplimiento normativo."]}}
        };

        const courseList = document.getElementById('course-list');
        const courseContent = document.getElementById('course-content');
        const searchInput = document.getElementById('course-search');
        const aboutUsLink = document.getElementById('about-us-link');

        function displayCourses(filter = '') {
            courseList.innerHTML = '';
            Object.keys(allCoursesData).forEach(courseId => {
                const course = allCoursesData[courseId];
                if (course.title.toLowerCase().includes(filter.toLowerCase())) {
                    const listItem = document.createElement('li');
                    const link = document.createElement('a');
                    link.href = '#';
                    link.dataset.courseId = courseId;
                    link.textContent = course.title;
                    listItem.appendChild(link);
                    courseList.appendChild(listItem);
                }
            });
        }

        function displayCourseContent(courseId) {
            const course = allCoursesData[courseId];
            if (!course) return;

            let contentHtml = `
                <div class="card">
                    <h1>${course.title}</h1>
                    <div class="course-info-banner">
                        ${Object.entries(course.info).map(([key, value]) => `<p><strong>${key.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase())}:</strong> ${value}</p>`).join('')}
                    </div>
                </div>
            `;

            if (course.value_proposition) {
                contentHtml += `
                    <div class="card">
                        <h2>Concepto y Propuesta de Valor</h2>
                        <p><strong>Problema:</strong> ${course.value_proposition.problem}</p>
                        <p><strong>Solución:</strong> ${course.value_proposition.solution}</p>
                        <h4>Producto Final: ${course.value_proposition.final_product.title}</h4>
                        <ul>
                            ${course.value_proposition.final_product.features.map(feature => `<li>${feature}</li>`).join('')}
                        </ul>
                    </div>
                `;
            }

            if (course.methodology || course.evaluation) {
                contentHtml += `<div class="card"><h2>Metodología y Evaluación</h2>`;
                if (course.methodology) {
                    contentHtml += `
                        <h3>Metodología: ${course.methodology.name}</h3>
                        ${course.methodology.phases.map(p => `<div><h4>${p.name}</h4><p>${p.objective}</p></div>`).join('')}
                    `;
                }
                if (course.evaluation) {
                    contentHtml += `
                        <h3>Evaluación</h3>
                        <p><strong>Continua (${course.evaluation.continuous.percentage}):</strong></p>
                        <ul>${course.evaluation.continuous.criteria.map(c => `<li>${c.name}: ${c.value}</li>`).join('')}</ul>
                        <p><strong>Final (${course.evaluation.final.percentage}):</strong></p>
                        <ul>${course.evaluation.final.criteria.map(c => `<li>${c.name}: ${c.value}</li>`).join('')}</ul>
                    `;
                }
                contentHtml += `</div>`;
            }

            if (course.malla_curricular) {
                contentHtml += `
                    <div class="card">
                        <h2>Malla Curricular</h2>
                        <table class="malla-curricular-table">
                            <thead>
                                <tr>
                                    <th>Sesión</th>
                                    <th>Día</th>
                                    <th>Tema Principal</th>
                                    <th>Herramientas</th>
                                    <th>Entregable Práctico</th>
                                </tr>
                            </thead>
                            <tbody>
                                ${course.malla_curricular.map(sesion => `
                                    <tr>
                                        <td>${sesion.sesion}</td>
                                        <td>${sesion.dia}</td>
                                        <td>${sesion.tema_principal}</td>
                                        <td>${Array.isArray(sesion.herramientas) ? sesion.herramientas.join(', ') : ''}</td>
                                        <td>${sesion.entregable_practico}</td>
                                    </tr>
                                `).join('')}
                            </tbody>
                        </table>
                    </div>
                `;
            }

            if (course.detailed_program) {
                contentHtml += `<div class="card"><h2>Programa Detallado</h2><div class="accordion">`;
                course.detailed_program.forEach(week => {
                    contentHtml += `<div class="accordion-item">
                                        <button class="accordion-header">Semana ${week.week}: ${week.title}</button>
                                        <div class="accordion-content">
                                            ${week.sessions.map(session => `
                                                <div class="session-detail">
                                                    <h5>Sesión ${session.session_id}: ${session.title}</h5>
                                                    <p><strong>Objetivos:</strong></p>
                                                    <ul>${session.objectives.map(o => `<li>${o}</li>`).join('')}</ul>
                                                    <p><strong>Entregables:</strong></p>
                                                    <ul>${session.deliverables.map(d => `<li>${d}</li>`).join('')}</ul>
                                                </div>
                                            `).join('')}
                                        </div>
                                   </div>`;
                });
                contentHtml += `</div></div>`;
            }

            if (course.participant_profile || course.resources) {
                contentHtml += `<div class="card"><h2>Perfil del Participante y Recursos</h2>`;
                if (course.participant_profile) {
                     contentHtml += `
                        <h3>Perfil del Participante</h3>
                        <p><strong>Requisitos:</strong></p>
                        <ul>${course.participant_profile.requirements.map(r => `<li>${r}</li>`).join('')}</ul>
                        <p><strong>Recomendado para:</strong></p>
                        <ul>${course.participant_profile.recommended.map(r => `<li>${r}</li>`).join('')}</ul>
                        <p><strong>No recomendado para:</strong></p>
                        <ul>${course.participant_profile.not_for.map(r => `<li>${r}</li>`).join('')}</ul>
                    `;
                }
                if (course.resources) {
                    contentHtml += `
                        <h3>Recursos</h3>
                        <p><strong>Plataformas:</strong></p>
                        <ul>${course.resources.platforms.map(p => `<li>${p}</li>`).join('')}</ul>
                    `;
                }
                contentHtml += `</div>`;
            }

            courseContent.innerHTML = contentHtml;
            addAccordionListeners();
        }

        function displayAboutUs() {
